@model MuniChorrillos2.Models.Usuario
@{
    Layout = null;
    ViewData["Title"] = "LoginCliente";

}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página con Imagen de Fondo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginCliente.css" asp-append-version="true" />
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src="/images/logoMuni.png" alt="LoginCliente" class="img-fluid mb-3" style="max-height: 80px;">
                    <h1>Bienvenido</h1>
                    <h1>Tienes una multa?</h1>
                    <h1>Ahora puedes pagarla por nuestra pagina Web Oficial</h1>
                    
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <!-- Mostrar el mensaje de éxito si existe -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <form asp-action="LoginCliente" asp-controller="AccesoClientes" method="post">
                        
                        <div>
                            <h1>Inica Sesión</h1>
                        </div>
                        

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" class="form-control form-control-lg"
                                   placeholder="Ingrese su Correo" />
                            <label asp-for="Email" class="form-label">Email</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <input asp-for="Contraseña" type="password" class="form-control form-control-lg"
                                   placeholder="Ingrese su contraseña" />
                            <label asp-for="Contraseña" class="form-label">Contraseña</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="recordarusuario" />
                                <label class="form-check-label" for="recordarusuario">
                                    Recordar Usuario
                                </label>
                            </div>
                            <a href="#!" class="text-body">Olvidaste tu contraseña?</a>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Ingresar
                            </button>
                            <!-- Agrega el botón para abrir el modal de registro -->
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                No tienes cuenta? <a href="#" data-bs-toggle="modal" data-bs-target="#registroModal" class="link-danger">Registrate</a>
                            </p>
                        </div>

                    </form>
                </div>

                <!-- Modal para el registro de usuario -->
                <div class="modal fade" id="registroModal" tabindex="-1" aria-labelledby="registroModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="registroModalLabel">Registro de Usuario</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form asp-action="RegistrarUsuario" asp-controller="AccesoClientes" method="post" id="registroForm">
                                    <div class="form-outline mb-4">
                                        <label asp-for="NombreU" class="form-label">Nombres</label>
                                        <input asp-for="NombreU" class="form-control" required />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="ApellidoU" class="form-label">Apellidos</label>
                                        <input asp-for="ApellidoU" class="form-control" required />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Direccion" class="form-label">Dirección</label>
                                        <input asp-for="Direccion" class="form-control" required />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                                        <input asp-for="Telefono" class="form-control" required />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" type="email" class="form-control" required />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Contraseña" class="form-label">Contraseña</label>
                                        <input asp-for="Contraseña" type="password" class="form-control" required />
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary">Registrar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
            <!-- Copyright -->
            <div class="text-white mb-3 mb-md-0">
                Copyright © 2024. InkaCode Perú All rights reserved.
            </div>
            <!-- Copyright -->
            <!-- Right -->
            <div>
                <a href="#!" class="text-white me-4">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#!" class="text-white me-4">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#!" class="text-white me-4">
                    <i class="fab fa-google"></i>
                </a>
                <a href="#!" class="text-white">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
            <!-- Right -->
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

</body>
</html>
